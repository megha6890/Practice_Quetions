 bool f=true;
    int check(Node* root){
        if(root==NULL)
        return 0;
        
        int left=check(root->left);
        int right=check(root->right);
        
        // remember this condition
        if(abs(left-right)>1)
        {
            f=false;
            
        }
        return max(left,right)+1;
        
    }
    bool isBalanced(Node *root)
    {
        check(root);
        return f;
        //  Your Code here
    }
